{
	"name": "angular-vscode-helper",
	"displayName": "Completion Item Provider Sample",
	"version": "0.0.1",
	"license": "MIT",
	"engines": {
		"vscode": "^1.73.0"
	},
	"activationEvents": ["*"],
	"contributes": {
		"configuration": {
			"title": "Angular Vscode Helper",
			"properties": {
				"angular-vscode-helper.configuration.UIComponentsPaths": {
					"scope": "application",
					"type": "array",
					"default": [
						"@angular/material",
						"@angular/cdk"
					],
					"description": "An array of node_moules paths that contains the components declarations of installed UI packages. It's better to provide only the directories containing the .d.ts type declaration files for quicker indexing. Any non-existent path will be ignored."
				}
			}
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^20.11.20",
		"@types/vscode": "^1.86.0",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"eslint": "^8.57.0",
		"typescript": "^5.3.2"
	},
	"dependencies": {
		"@angular/material": "^17.1.0",
		"glob": "^10.3.10"
	}
}
